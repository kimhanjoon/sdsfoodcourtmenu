<div class="list-group">
{{#each this}}
  	{{#if soldout}}
	<div class="list-group-item disabled">
		<div class="pull-left text-center" style="width: 80px; margin-right: 10px;">
			<span class="soldout text-danger"><span class="kor">판매종료</span><span class="eng hidden">SOLD OUT</span></span>
		</div>
		<del>
			<span class="title_kor">{{title_kor}}</span>
			<span class="title_eng hidden">{{title_eng}}</span>
		</del>
		<span class="corner badge pull-right">{{corner}}</span>
	</div>
	{{else}}
	<div class="list-group-item collapse-boundary food" data-food-id="{{id}}">
		<div class="media collapse-trigger">
		    {{#if img_src}}
			<div class="media-left">
				<img class="media-object" src="{{img_src}}" style="width:60px;">
			</div>
			{{/if}}
			<div class="media-body">
		    <h4 class="media-heading">
		    	<span class="title_kor">{{title_kor}}</span>
		    	<span class="title_eng hidden">{{#if title_eng}}{{title_eng}}{{else}}{{title_kor}}{{/if}}</span>
		    	<span class="corner badge pull-right">{{corner}}</span>
		    </h4>
		    <div class="pull-left">
			    {{#if isInDinner}}<span class="label label-danger"><span class="kor">저녁메뉴</span><span class="eng hidden">In Dinner</span></span>{{/if}}
		    {{#if kcal}}
			    <span class="kcal">{{kcal}} kcal</span>
			    {{#if very_high_cal}}<span class="label label-danger"><span class="kor">초고칼로리</span><span class="eng hidden">Very High Calorie</span></span>{{/if}}
			    {{#if high_cal}}<span class="label label-warning"><span class="kor">고칼로리</span><span class="eng hidden">High Calorie</span></span>{{/if}}
			    {{#if low_cal}}<span class="label label-info"><span class="kor">저칼로리</span><span class="eng hidden">Low Calorie</span></span>{{/if}}
			    {{#if very_low_cal}}<span class="label label-success"><span class="kor">초저칼로리</span><span class="eng hidden">Very Low Calorie</span></span>{{/if}}
			{{/if}}
		    </div>
		    <div class="pull-right">
		    {{#if payments}}
		    	<span class="eng hidden">&#8361;</span> {{payments}} <span class="kor">원</span>
			{{/if}}
		    </div>
			</div>
		</div>
		<div class="collapse">
			<div class="collapse-trigger">
				{{#if img_src}}
				<img class="media-object" src="{{img_src}}" style="width:100%;">
				{{/if}}
			</div>
		</div>
	</div>
	{{/if}}
{{else}}
    <div class="list-group-item">
        <span class="kor">표시할 정보가 없습니다.</span><span class="eng hidden">No data to show.</span>
    </div>
{{/each}}
</div>
